<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sick Leave Requests - Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body{background:#f4f6fb;padding:20px}
    .container-main{max-width:1100px;margin:0 auto;background:#fff;padding:20px;border-radius:12px}
    .card-row{display:grid;grid-template-columns:repeat(auto-fit,minmax(250px,1fr));gap:12px;margin-bottom:16px}
    .req-card{padding:14px;border-radius:10px;border-left:4px solid #667eea;background:#fff}
    .req-actions{display:flex;gap:8px;margin-top:12px}
  </style>
</head>
<body>
  <div class="container-main shadow-sm">
    <h3><i class="fas fa-notes-medical me-2"></i>Sick Leave Requests</h3>
    <p class="text-muted">Approve or reject student submitted sick leave requests.</p>

    <% if(message && message.length>0){ %>
      <div class="alert alert-info"><%- message %></div>
    <% } %>

    <% if(requests && requests.length>0){ %>
      <% requests.forEach(function(r){ %>
        <div class="req-card shadow-sm">
          <div style="display:flex;justify-content:space-between;align-items:center;">
            <div>
              <strong><%= r.sname %></strong> • <small class="text-muted">UID: <%= r.uid %></small>
              <div class="text-muted" style="font-size:13px"><%= r.illness %> • <%= r.created_at %></div>
            </div>
            <div>
              <span class="badge bg-<%= r.status==='pending' ? 'warning' : (r.status==='approved' ? 'success' : 'danger') %>"><%= r.status %></span>
            </div>
          </div>
          <% if(r.details){ %>
            <div style="margin-top:8px"><strong>Details:</strong> <%= r.details %></div>
          <% } %>

          <% if(r.status==='pending'){ %>
            <div class="req-actions">
              <form action="/admin/sickleaverequest/approve/<%= r.requestid %>" method="post">
                <button class="btn btn-success btn-sm" onclick="return confirm('Approve sick leave?')"><i class="fas fa-check"></i> Approve</button>
              </form>
              <form action="/admin/sickleaverequest/reject/<%= r.requestid %>" method="post">
                <input name="reason" placeholder="Rejection reason" class="form-control form-control-sm" style="width:240px;display:inline-block;margin-right:6px">
                <button class="btn btn-danger btn-sm" onclick="return confirm('Reject sick leave?')"><i class="fas fa-times"></i> Reject</button>
              </form>
            </div>
          <% } else { %>
            <div style="margin-top:8px;font-size:13px;color:#666">Handled by: <%= r.approved_by || '-' %> at <%= r.approved_at || '-' %></div>
          <% } %>
        </div>
      <% }); %>
    <% } else { %>
      <div class="alert alert-secondary">No requests found.</div>
    <% } %>
  </div>
</body>
</html>