<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Approved Complaints - Technician</title>
    <link rel="stylesheet" href="/stylesheets/FLEXBOX.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" href="/images/4174.png">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            transition: background-image 0.5s ease-in-out;
        }

        .content-wrapper {
            position: relative;
            z-index: 1;
        }

        .alert-container {
            margin-top: 1rem;
            margin-bottom: 1rem;
            padding: 0 1rem;
        }

        .alert-custom {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
            border: none;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            max-width: 600px;
            margin: 0 auto;
            animation: slideDown 0.3s ease-out;
        }

        .alert-success-custom {
            background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(81, 207, 102, 0.3);
            border: none;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            max-width: 600px;
            margin: 0 auto;
            animation: slideDown 0.3s ease-out;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-custom i,
        .alert-success-custom i {
            font-size: 1.25rem;
        }

        .logo-container {
            padding: 1.5rem 0;
            text-align: center;
        }

        .logo-container img {
            max-width: 350px;
            height: auto;
            transition: transform 0.3s ease;
            filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
        }

        .logo-container img:hover {
            transform: scale(1.05);
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }

        /* Complaints Container */
        .complaints-section {
            padding: 2rem 1rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .page-header {
            text-align: center;
            margin-bottom: 2rem;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .page-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .page-header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .complaints-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .complaint-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 1.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            min-width: 0;
        }

        .complaint-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }

        .complaint-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        }

        .complaint-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #f0f0f0;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .complaint-category {
            font-size: 1.3rem;
            font-weight: 600;
            color: #1a1a2e;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            flex: 1;
            min-width: 150px;
        }

        .complaint-category i {
            color: #667eea;
        }

        .mark-done-btn {
            padding: 0.5rem 0.75rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            font-size: 0.9rem;
            white-space: nowrap;
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
            color: white;
            flex-shrink: 0;
        }

        .mark-done-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(23, 162, 184, 0.4);
        }

        .mark-done-btn:disabled {
            background: #6c757d;
            cursor: not-allowed;
            opacity: 0.6;
        }

        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            flex-shrink: 0;
        }

        .status-resolved {
            background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
            color: white;
        }

        .status-approved {
            background: linear-gradient(135deg, #4dabf7 0%, #339af0 100%);
            color: white;
        }

        .complaint-details {
            margin-top: 1rem;
        }

        .complaint-detail-item {
            margin-bottom: 0.75rem;
            display: flex;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .complaint-detail-item strong {
            color: #667eea;
            min-width: 120px;
            font-weight: 600;
        }

        .complaint-detail-item span {
            color: #555;
            flex: 1;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .empty-state i {
            font-size: 4rem;
            color: #ccc;
            margin-bottom: 1rem;
        }

        .empty-state h3 {
            color: #666;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #999;
        }

        @media (max-width: 768px) {
            .logo-container img {
                max-width: 150px;
            }

            .alert-custom,
            .alert-success-custom {
                padding: 0.75rem 1rem;
                font-size: 0.9rem;
            }

            .complaints-grid {
                grid-template-columns: 1fr;
            }

            .page-header h1 {
                font-size: 2rem;
            }

            .complaint-header {
                flex-direction: column;
                align-items: stretch;
            }

            .mark-done-btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>

<body>
    <div class="bg-image">
        <div class="content-wrapper">
            <!-- Alert Message -->
            <div class="alert-container">
                <% if(message && message.length>0){ %>
                    <div
                        class="alert-<%= message.includes('error') || message.includes('Error') ? 'custom' : 'success-custom' %>">
                        <i
                            class="fas fa-<%= message.includes('error') || message.includes('Error') ? 'exclamation-circle' : 'check-circle' %>"></i>
                        <span><%- message %></span>
                    </div>


                    <% } %>

            </div>

            <!-- Logo -->
            <div class="logo-container">
                <a href="/homepage">
                    <img style="filter: drop-shadow(0 10px 100px rgba(0, 0, 0, 0.1)); " src="/images/logo.png"
                        alt="Logo" />
                </a>
            </div>

          <!-- Logout Button -->
            <div style="text-align: center; margin-bottom: 1.5rem;">
                <a href="/logout" class="btn-back" style="background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>

            <!-- Main Content -->
            <div class="complaints-section">
                <div class="page-header">
                    <h1><i class="fas fa-tools"></i> Approved Complaints</h1>
                    <p>Review and resolve student complaints</p>
                </div>

                <% if (complaints.length===0) { %>
                    <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <h3>No Complaints Found</h3>
                        <p>There are no approved complaints to review at the moment.</p>
                    </div>
                    <% } else { %>
                        <div class="complaints-grid">
                            <% complaints.forEach(complaint=> { %>
                                <div class="complaint-card">
                                    <div class="complaint-header">
                                        <div class="complaint-category">
                                            <i class="fas fa-tag"></i>
                                            <%= complaint.category %>
                                        </div>
                                        <% if (complaint.status==='resolved' ) { %>
                                            <span class="status-badge status-resolved">
                                                <i class="fas fa-check-circle"></i> Resolved
                                            </span>
                                            <% } else { %>
                                                <button class="mark-done-btn" onclick="markAsDone(<%= complaint.id %>)">
                                                    <i class="fas fa-check"></i> Mark as Done
                                                </button>
                                                <% } %>
                                    </div>

                                    <div class="complaint-details">
                                        <div class="complaint-detail-item">
                                            <strong><i class="fas fa-user"></i> Student:</strong>
                                            <span>
                                                <%= complaint.sname %> (<%= complaint.student_uid %>)
                                            </span>
                                        </div>
                                        <div class="complaint-detail-item">
                                            <strong><i class="fas fa-align-left"></i> Description:</strong>
                                            <span>
                                                <%= complaint.description %>
                                            </span>
                                        </div>
                                        <div class="complaint-detail-item">
                                            <strong><i class="fas fa-clock"></i> Submitted:</strong>
                                            <span>
                                                <%= complaint.timestamp %>
                                            </span>
                                        </div>
                                        <div class="complaint-detail-item">
                                            <strong><i class="fas fa-info-circle"></i> Status:</strong>
                                            <% if (complaint.status==='resolved' ) { %>
                                                <span class="status-badge status-resolved">
                                                    <%= complaint.status %>
                                                </span>
                                                <% } else { %>
                                                    <span class="status-badge status-approved">
                                                        <%= complaint.status %>
                                                    </span>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                        <% } %>
            </div>


        </div>
    </div>

    <script>
        const backgroundImages = [
            '/loginimages/1.jpg',
            '/loginimages/2.jpg',
            '/loginimages/3.jpg',
            '/loginimages/4.jpg',
            '/loginimages/5.jpg',
            '/loginimages/6.jpg',   
            '/loginimages/7.jpg'
        ];
        
        let currentImageIndex = 0;
        
        function changeBackground() {
            document.body.style.backgroundImage = `url('${backgroundImages[currentImageIndex]}')`;
            currentImageIndex = (currentImageIndex + 1) % backgroundImages.length;
        }
        
        // Set initial background
        changeBackground();
    
        // Change background every 20 seconds
        setInterval(changeBackground, 20000);
    
        function markAsDone(id) {
            if (!confirm('Mark this complaint as resolved?')) {
                return;
            }
            fetch(`/technician/complain/${id}/resolve`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json',
                },
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Complaint marked as resolved');
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }
      </script>
</body>

</html>